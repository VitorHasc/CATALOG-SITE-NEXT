generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

model User {
  idUser   Int      @id @default(autoincrement())
  email    String   @unique
  password String
  role     Role     @default(USER)
  numero   String?

  Imoveis  Imovel[]
}

model Imovel {
  idImovel    Int      @id @default(autoincrement())
  nome        String
  descricao   String
  preco       Float
  idUser      Int
  cidade      String
  bairro      String
  rua         String
  numero      String

  User        User      @relation(fields: [idUser], references: [idUser])
}


enum Role {
  USER       
  EMPREGADO  
  ADM
}